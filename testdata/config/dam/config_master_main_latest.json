          },
          "damRoleCategories": [
            "metadata",
            "list",
            "read"
          ],
          "ui": {
            "description": "Ability to login as new user with group",
            "label": "Ability to Get DB Credentials"
          }
        }
      },
      "ui": {
        "description": "Offers AWS Redshift Access",
        "label": "AWS Redshift"
      }
    }
